<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%cyan{%d{HH:mm}} [%t] %highlight{%-5level} %magenta{%c{1.}} - %msg%n" disableAnsi="false"/>
        </Console>
    </Appenders>
    <Loggers>

        <Logger name="com.thbs" level="DEBUG" />

        <Root level="INFO">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>